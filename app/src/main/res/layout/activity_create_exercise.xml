<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateExerciseActivity">

    <EditText
        android:id="@+id/et_ce_weight"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintEnd_toStartOf="@+id/et_ce_emphasis"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toEndOf="@+id/ed_ce_exercisename"
        app:layout_constraintTop_toBottomOf="@+id/tv_ce_exercisename" />

    <TextView
        android:id="@+id/tv_ce_title"
        android:layout_width="341dp"
        android:layout_height="47dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="Create Exercise Activity"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_ce_exercisename"
        android:layout_width="110dp"
        android:layout_height="27dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="52dp"
        android:text="Exercise Name"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ce_title" />

    <TextView
        android:id="@+id/tv_ce_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Weight"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_ce_title"
        tools:layout_editor_absoluteX="178dp" />

    <TextView
        android:id="@+id/tv_ce_empasis"
        android:layout_width="73dp"
        android:layout_height="24dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Emphasis"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ce_title" />

    <TextView
        android:id="@+id/tv_ce_dayofweek"
        android:layout_width="89dp"
        android:layout_height="22dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="48dp"
        android:width="50sp"
        android:text="Day of the week"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_ce_weight" />

    <TextView
        android:id="@+id/tv_ce_nameofrepetition"
        android:layout_width="152dp"
        android:layout_height="27dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="48dp"
        android:text="Number of Repetition"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/tv_ce_dayofweek"
        app:layout_constraintTop_toBottomOf="@+id/et_ce_weight" />

    <TextView
        android:id="@+id/tv_ce_intervalexercise"
        android:layout_width="127dp"
        android:layout_height="23dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text="Interval between Exercise"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_ce_weight" />

    <TextView
        android:id="@+id/tv_ce_videolink"
        android:layout_width="81dp"
        android:layout_height="21dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="56dp"
        android:text="Video Link"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_ce_nameofrepetition" />

    <TextView
        android:id="@+id/tv_ce_timeofexercise"
        android:layout_width="149dp"
        android:layout_height="27dp"
        android:layout_marginTop="56dp"
        android:text="Time of the Exercise"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/et_ce_nameofrepetition"
        tools:layout_editor_absoluteX="122dp" />

    <TextView
        android:id="@+id/tv_ce_intervalseries"
        android:layout_width="120dp"
        android:layout_height="21dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Interval etween Series"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_ce_nameofrepetition" />

    <Button
        android:id="@+id/bt_ce_confirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:text="Confirm"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_ce_videolink" />

    <EditText
        android:id="@+id/ed_ce_exercisename"
        android:layout_width="141dp"
        android:layout_height="51dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ce_exercisename" />

    <EditText
        android:id="@+id/et_ce_dayofweek"
        android:layout_width="106dp"
        android:layout_height="45dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ce_dayofweek" />

    <EditText
        android:id="@+id/et_ce_emphasis"
        android:layout_width="119dp"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ce_exercisename" />

    <EditText
        android:id="@+id/et_ce_nameofrepetition"
        android:layout_width="155dp"
        android:layout_height="46dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintTop_toBottomOf="@+id/tv_ce_dayofweek"
        tools:layout_editor_absoluteX="122dp" />

    <EditText
        android:id="@+id/et_ce_intervalexercise"
        android:layout_width="124dp"
        android:layout_height="46dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ce_dayofweek" />

    <EditText
        android:id="@+id/et_ce_videolink"
        android:layout_width="97dp"
        android:layout_height="49dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ce_videolink" />

    <EditText
        android:id="@+id/et_ce_timeofexercise"
        android:layout_width="169dp"
        android:layout_height="49dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintTop_toBottomOf="@+id/tv_ce_videolink"
        tools:layout_editor_absoluteX="114dp" />

    <EditText
        android:id="@+id/et_ce_intervalseries"
        android:layout_width="110dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/et_ce_timeofexercise"
        app:layout_constraintTop_toBottomOf="@+id/tv_ce_videolink" />

</androidx.constraintlayout.widget.ConstraintLayout>