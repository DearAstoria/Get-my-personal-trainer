<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientMainActivity">

    <TextView
        android:id="@+id/tv_cm_title"
        android:layout_width="277dp"
        android:layout_height="47dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="Client Main Activity"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_cm_changeinfor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="60dp"
        android:text="Change My Information"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_cm_title" />

    <Button
        android:id="@+id/bt_cm_personaltrainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="My Personal Trainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_cm_title" />

    <TextView
        android:id="@+id/tv_cm_monday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Monday"
        app:layout_constraintTop_toBottomOf="@+id/bt_cm_changeinfor"
        tools:layout_editor_absoluteX="38dp" />

    <TextView
        android:id="@+id/tv_cm_tuesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Tuesday"
        app:layout_constraintTop_toBottomOf="@+id/bt_cm_changeinfor"
        tools:layout_editor_absoluteX="179dp" />

    <TextView
        android:id="@+id/tv_cm_wednesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Wednesday"
        app:layout_constraintTop_toBottomOf="@+id/bt_cm_changeinfor"
        tools:layout_editor_absoluteX="308dp" />

    <TextView
        android:id="@+id/tv_cm_exercise_mon_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Exercise Name"
        app:layout_constraintTop_toBottomOf="@+id/tv_cm_monday"
        tools:layout_editor_absoluteX="25dp" />

    <TextView
        android:id="@+id/tv_cm_exercise_tue_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Exercise Name"
        app:layout_constraintTop_toBottomOf="@+id/tv_cm_monday"
        tools:layout_editor_absoluteX="158dp" />

    <TextView
        android:id="@+id/tv_cm_exercise_wed_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Exercise Name"
        app:layout_constraintTop_toBottomOf="@+id/tv_cm_monday"
        tools:layout_editor_absoluteX="301dp" />

</androidx.constraintlayout.widget.ConstraintLayout>